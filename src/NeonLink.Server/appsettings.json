{
  "Server": {
    "Port": 9876,
    "DiscoveryPort": 9877,
    "MaxConnections": 5,
    "PollingIntervalMs": 500,
    "HeartbeatIntervalMs": 10000,
    "ReconnectionDelayMs": 1000,
    "MaxReconnectAttempts": 5
  },
  "Security": {
    "AllowExternalIp": false,
    "RateLimitPerMinute": 100,
    "DangerousCommandsEnabled": false,
    "AllowedCommands": [
      "get_status",
      "ping",
      "get_config",
      "set_polling_interval"
    ]
  },
  "Hardware": {
    "EnableCpu": true,
    "EnableGpu": true,
    "EnableRam": true,
    "EnableStorage": true,
    "EnableNetwork": true,
    "EnableGamingDetection": true
  },
  "Gaming": {
    "ProcessWhitelist": [
      "cs2.exe",
      "RDR2.exe",
      "eldenring.exe",
      "valorant.exe",
      "fortnite.exe",
      "apexlegends.exe"
    ],
    "GpuUsageThreshold": 85.0,
    "CpuUsageThreshold": 40.0
  },
  "Logging": {
    "LogDirectory": "logs",
    "LogFile": "neonlink-.txt",
    "LogLevel": "Information",
    "ConsoleEnabled": true,
    "FileEnabled": true,
    "RetainFileCountLimit": 7
  },
  "OLED": {
    "ProtectionEnabled": false
  },
  "AllowedHosts": "*"
}
