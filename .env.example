# NeonLink Environment Variables
# Copy this file to .env and update values

# PostgreSQL Configuration
POSTGRES_DB=neonlink
POSTGRES_USER=neonlink
POSTGRES_PASSWORD=neonlink_secret
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Server Configuration
SERVER_PORT=9876
SERVER_DISCOVERY_PORT=9877
ASPNETCORE_ENVIRONMENT=Docker
NEONLINK_LOG_LEVEL=Information

# Database Connection (for connection string)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=neonlink
DB_USER=neonlink
DB_PASSWORD=neonlink_secret

# Flutter Configuration
FLUTTER_VERSION=3.24.0
ANDROID_SDK_ROOT=/opt/android-sdk

# Security (optional overrides)
# ALLOWED_ORIGINS=*
# RATE_LIMIT_PER_MINUTE=100
